# add blueacorn ui -- if this is a webroot project, 
#   copy to ../blueacornui
# else 
#   copy to blueacornui (in magento root)
@shell  if [ $(basename "$PROJECT") = "webroot" ]; then cp -a ${MODULE}/blueacornui ${PROJECT}/../blueacornui; else cp -a ${MODULE}/blueacornui ${PROJECT}; fi

